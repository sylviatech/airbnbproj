<div class="container"> 
	<h1>Edit your reservation</h1>

	<div class="row">
		<div class="col-md-6 col-md-offset-3"></div>
		<%= form_for @reservation do |f| %>
				<%= f.hidden_field :user_id, :value => current_user.id %>

			  <%= f.label :check_in_date %>
  			<%= f.date_field :check_in_date, type: 'date' %>

				<%= f.label :check_out_date %>
  			<%= f.date_field :check_out_date, type: 'date' %>

			  <%= f.label :guest %>:
			  <%= f.text_area :guest, class: 'form-control' %>

		  <%= f.submit "Update", class: 'btn btn-warning' %>



	  <% end %>
  </div>
</div>
