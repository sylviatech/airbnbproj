<div class="container">
	<h1>Your searched listings:</h1>
		<table>
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th>Maximum Guest</th>
				<th>Price</th>
			</tr>

			<% @listings.each do |listing| %>
				<tr>
					<td><%= link_to listing.title, listing %></td>
					<td><%= listing.content[0..80] + "..." %></td>
					<td><%= listing.guest %></td>
					<td><%= listing.price %></td>
				</tr>

				<% end %>
		</table>

</div>